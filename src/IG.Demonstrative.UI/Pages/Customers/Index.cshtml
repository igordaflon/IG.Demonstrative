@page "/clientes"
@model IG.Demonstrative.UI.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <div class="card-tittle">

                <div class="input-group mb-3">
                    <div role="button" class="btn-group btn-group-sm">
                        <a role="button" href="" class="btn btn-outline-dark"><i class="fa fa-sync"></i> Atualizar</a>
                        <a role="button" href="/cliente/novo" class="btn btn-outline-dark"><i class="fa fa-file"></i> Incluir</a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-info mb-3">@Model.Message</div>
                }

                @if (Model.Items.Count > 0)
                {
                    <table class="table table-sm table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().RecordStatus)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="text-break">
                                        <a href="/cliente/@item.Id">
                                            @Html.DisplayFor(model => item.Name)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RecordStatus)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>